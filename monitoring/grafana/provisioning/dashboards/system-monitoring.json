{
  "id": null,
  "title": "Monitoramento do Sistema",
  "tags": ["sistema", "monitoramento"],
  "style": "dark",
  "timezone": "browser",
  "panels": [
    {
      "id": 1,
      "title": "Uso de CPU (%)",
      "type": "stat",
      "targets": [
        {
          "expr": "100 - (avg by (instance) (irate(node_cpu_seconds_total{mode=\"idle\",instance=~\"$instance\"}[5m])) * 100)",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 70},
              {"color": "red", "value": 90}
            ]
          },
          "unit": "percent"
        }
      },
      "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0}
    },
    {
      "id": 2,
      "title": "Uso de Memória (%)",
      "type": "stat",
      "targets": [
        {
          "expr": "(1 - (node_memory_MemAvailable_bytes{instance=~\"$instance\"} / node_memory_MemTotal_bytes{instance=~\"$instance\"})) * 100",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 70},
              {"color": "red", "value": 90}
            ]
          },
          "unit": "percent"
        }
      },
      "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0}
    },
    {
      "id": 3,
      "title": "Uso de Disco (%)",
      "type": "stat",
      "targets": [
        {
          "expr": "(1 - (node_filesystem_avail_bytes{mountpoint=\"/\",instance=~\"$instance\"} / node_filesystem_size_bytes{mountpoint=\"/\",instance=~\"$instance\"})) * 100",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 70},
              {"color": "red", "value": 90}
            ]
          },
          "unit": "percent"
        }
      },
      "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0}
    },
    {
      "id": 4,
      "title": "Load Average",
      "type": "stat",
      "targets": [
        {
          "expr": "node_load1{instance=~\"$instance\"}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 2},
              {"color": "red", "value": 4}
            ]
          },
          "unit": "short"
        }
      },
      "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0}
    },
    {
      "id": 5,
      "title": "Histórico de CPU",
      "type": "timeseries",
      "targets": [
        {
          "expr": "100 - (avg by (instance) (irate(node_cpu_seconds_total{mode=\"idle\",instance=~\"$instance\"}[5m])) * 100)",
          "refId": "A",
          "legendFormat": "CPU Usage %"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "unit": "percent",
          "min": 0,
          "max": 100
        }
      },
      "gridPos": {"h": 9, "w": 12, "x": 0, "y": 8}
    },
    {
      "id": 6,
      "title": "Histórico de Memória",
      "type": "timeseries",
      "targets": [
        {
          "expr": "(1 - (node_memory_MemAvailable_bytes{instance=~\"$instance\"} / node_memory_MemTotal_bytes{instance=~\"$instance\"})) * 100",
          "refId": "A",
          "legendFormat": "Memory Usage %"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "unit": "percent",
          "min": 0,
          "max": 100
        }
      },
      "gridPos": {"h": 9, "w": 12, "x": 12, "y": 8}
    },
    {
      "id": 7,
      "title": "Tráfego de Rede - Recebido",
      "type": "timeseries",
      "targets": [
        {
          "expr": "irate(node_network_receive_bytes_total{device!=\"lo\",instance=~\"$instance\"}[5m]) * 8",
          "refId": "A",
          "legendFormat": "{{device}} - Recebido"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "unit": "bps"
        }
      },
      "gridPos": {"h": 9, "w": 12, "x": 0, "y": 17}
    },
    {
      "id": 8,
      "title": "Tráfego de Rede - Enviado",
      "type": "timeseries",
      "targets": [
        {
          "expr": "irate(node_network_transmit_bytes_total{device!=\"lo\",instance=~\"$instance\"}[5m]) * 8",
          "refId": "A",
          "legendFormat": "{{device}} - Enviado"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "unit": "bps"
        }
      },
      "gridPos": {"h": 9, "w": 12, "x": 12, "y": 17}
    },
    {
      "id": 9,
      "title": "I/O de Disco - Leitura",
      "type": "timeseries",
      "targets": [
        {
          "expr": "irate(node_disk_read_bytes_total{instance=~\"$instance\"}[5m])",
          "refId": "A",
          "legendFormat": "{{device}} - Leitura"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "unit": "Bps"
        }
      },
      "gridPos": {"h": 9, "w": 12, "x": 0, "y": 26}
    },
    {
      "id": 10,
      "title": "I/O de Disco - Escrita",
      "type": "timeseries",
      "targets": [
        {
          "expr": "irate(node_disk_written_bytes_total{instance=~\"$instance\"}[5m])",
          "refId": "A",
          "legendFormat": "{{device}} - Escrita"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "unit": "Bps"
        }
      },
      "gridPos": {"h": 9, "w": 12, "x": 12, "y": 26}
    },
    {
      "id": 11,
      "title": "Processos em Execução",
      "type": "stat",
      "targets": [
        {
          "expr": "node_procs_running{instance=~\"$instance\"}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 50},
              {"color": "red", "value": 100}
            ]
          },
          "unit": "short"
        }
      },
      "gridPos": {"h": 8, "w": 6, "x": 0, "y": 35}
    },
    {
      "id": 12,
      "title": "Uptime do Sistema",
      "type": "stat",
      "targets": [
        {
          "expr": "(node_time_seconds{instance=~\"$instance\"} - node_boot_time_seconds{instance=~\"$instance\"})",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "steps": [
              {"color": "green", "value": null}
            ]
          },
          "unit": "s"
        }
      },
      "gridPos": {"h": 8, "w": 6, "x": 6, "y": 35}
    },
    {
      "id": 13,
      "title": "Conexões de Rede",
      "type": "stat",
      "targets": [
        {
          "expr": "node_netstat_Tcp_CurrEstab{instance=~\"$instance\"}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 100},
              {"color": "red", "value": 500}
            ]
          },
          "unit": "short"
        }
      },
      "gridPos": {"h": 8, "w": 6, "x": 12, "y": 35}
    },
    {
      "id": 14,
      "title": "Temperatura da CPU",
      "type": "stat",
      "targets": [
        {
          "expr": "node_hwmon_temp_celsius{instance=~\"$instance\"}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 60},
              {"color": "red", "value": 80}
            ]
          },
          "unit": "celsius"
        }
      },
      "gridPos": {"h": 8, "w": 6, "x": 18, "y": 35}
    }
  ],
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "templating": {
    "list": [
      {
        "type": "query",
        "name": "instance",
        "label": "Máquina",
        "datasource": "Prometheus",
  "query": "label_values(node_exporter_build_info, instance)",
  "definition": "label_values(node_exporter_build_info, instance)",
        "includeAll": true,
        "allValue": ".*",
        "multi": true,
        "refresh": 2,
        "hide": 0,
        "sort": 1
      }
    ]
  },
  "refresh": "5s",
  "schemaVersion": 30,
  "version": 1
}